<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/heading_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        tools:text = "Yayy ! Hotel Booked"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/hotel_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heading_text_view"
        android:textSize="20sp"
        android:layout_marginTop="10sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/check_in_date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hotel_name"
        android:textSize="20sp"
        android:layout_marginTop="10sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/check_out_date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/check_in_date_text"
        android:textSize="20sp"
        android:layout_marginTop="10sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/number_of_guests_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/check_out_date_text"
        android:textSize="20sp"
        android:layout_marginTop="10sp"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/confirmation_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number_of_guests_text"
        android:textSize="20sp"
        android:layout_marginTop="10sp"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>